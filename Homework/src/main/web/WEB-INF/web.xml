<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <error-page>
        <location>/error</location>
    </error-page>

    <filter>
        <filter-name>RequestLoggingFilter</filter-name>
        <filter-class>org.geekhub.crypto.web.SessionFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>RequestLoggingFilter</filter-name>
        <url-pattern>/application</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>

    <servlet>
        <servlet-name>FrontServlet</servlet-name>
        <servlet-class>org.geekhub.crypto.web.crypto.FrontServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FrontServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MainMenuServlet</servlet-name>
        <servlet-class>org.geekhub.crypto.web.crypto.MainMenuServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainMenuServlet</servlet-name>
        <url-pattern>/application</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DecodeServlet</servlet-name>
        <servlet-class>org.geekhub.crypto.web.crypto.coders.DecodeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DecodeServlet</servlet-name>
        <url-pattern>/application/decode</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EncodeServlet</servlet-name>
        <servlet-class>org.geekhub.crypto.web.crypto.coders.EncodeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EncodeServlet</servlet-name>
        <url-pattern>/application/encode</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AnalyticsMenu</servlet-name>
        <servlet-class>org.geekhub.crypto.web.crypto.analytics.AnalyticsMenuServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AnalyticsMenu</servlet-name>
        <url-pattern>/application/analytics</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AnalyticsCountInputs</servlet-name>
        <servlet-class>org.geekhub.crypto.web.crypto.analytics.AuditCountInputsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AnalyticsCountInputs</servlet-name>
        <url-pattern>/application/analytics/count_inputs</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AnalyticsCountByDate</servlet-name>
        <servlet-class>org.geekhub.crypto.web.crypto.analytics.AuditCountByDateServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AnalyticsCountByDate</servlet-name>
        <url-pattern>/application/analytics/count_by_date</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AnalyticsFindMostPopular</servlet-name>
        <servlet-class>org.geekhub.crypto.web.crypto.analytics.AuditFindMostPopularServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AnalyticsFindMostPopular</servlet-name>
        <url-pattern>/application/analytics/find_most_popular_codec</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HistoryMenu</servlet-name>
        <servlet-class>org.geekhub.crypto.web.crypto.history.HistoryMenuServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HistoryMenu</servlet-name>
        <url-pattern>/application/history</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ShowHistory</servlet-name>
        <servlet-class>org.geekhub.crypto.web.crypto.history.ShowHistoryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowHistory</servlet-name>
        <url-pattern>/application/history/show_history</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HistoryRemoveLast</servlet-name>
        <servlet-class>org.geekhub.crypto.web.crypto.history.RemoveHistoryLastServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>HistoryRemoveLast</servlet-name>
        <url-pattern>/application/history/remove_last</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ClearHistory</servlet-name>
        <servlet-class>org.geekhub.crypto.web.crypto.history.ClearHistoryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ClearHistory</servlet-name>
        <url-pattern>/application/history/clear_history</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Error</servlet-name>
        <servlet-class>org.geekhub.crypto.web.crypto.ErrorHandler</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Error</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>



</web-app>