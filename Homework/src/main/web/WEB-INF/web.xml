<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>FrontServlet</servlet-name>
        <servlet-class>org.geekhub.crypto.web.FrontServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>FrontServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckServlet</servlet-name>
        <servlet-class>org.geekhub.crypto.web.CheckSessionServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CheckServlet</servlet-name>
        <url-pattern>/session</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>MainMenuServlet</servlet-name>
        <servlet-class>org.geekhub.crypto.web.MainMenuServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>MainMenuServlet</servlet-name>
        <url-pattern>/application</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DecodeServlet</servlet-name>
        <servlet-class>org.geekhub.crypto.web.DecodeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DecodeServlet</servlet-name>
        <url-pattern>/application/decode</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EncodeServlet</servlet-name>
        <servlet-class>org.geekhub.crypto.web.EncodeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>EncodeServlet</servlet-name>
        <url-pattern>/application/encode</url-pattern>
    </servlet-mapping>

</web-app>